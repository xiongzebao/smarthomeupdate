<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_list_item"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll1"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:textColor="@color/color33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="张三"></TextView>

            <TextView
                android:id="@+id/phone"
                android:textSize="13sp"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textColor="@color/color99"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/name"
                android:text="18827603142"></TextView>


            <TextView

                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/receiptTime"
                android:text="接待时间"></TextView>

            <TextView
                android:visibility="gone"
                android:id="@+id/receiptTime"
                android:layout_marginRight="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2020.12.12"></TextView>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"

            android:background="@color/line_grey" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_project_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="岗位名称"></TextView>

            <TextView
                android:textSize="13sp"

                android:textColor="@color/color99"
                android:id="@+id/tv_project_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_project_label"
                android:text="18827603142"></TextView>


            <TextView
                android:id="@+id/tv_recruit_label"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tv_recruit_channel"
                android:text="招聘渠道"></TextView>

            <TextView
                android:textSize="13sp"

                android:textColor="@color/color99"
                android:id="@+id/tv_recruit_channel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="自媒体"></TextView>
        </RelativeLayout>


    </LinearLayout>
    <TextView
        android:id="@+id/tv_status"
        android:visibility="gone"
        android:text=""
        android:textColor="@color/white"
        android:textSize="10sp"
        android:gravity="center"
        android:background="@mipmap/ic_yitonguo"
        android:layout_gravity="right|top"
        android:layout_width="50dp"
        android:layout_height="20dp">

    </TextView>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_slide_bar"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_btn1"
            android:background="#ECA150"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_height="match_parent"
            android:text="已通过" />

        <TextView
            android:layout_weight="1"
            android:textSize="20sp"
            android:id="@+id/tv_btn2"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/bg_list_item_sub"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="未通过" />
    </LinearLayout>


</LinearLayout>